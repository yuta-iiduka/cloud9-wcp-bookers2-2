      <table>
        <!--コメント一覧-->
        <% book.book_comments.each do |book_comment| %>
          <tr>
          <td>
            <!--ユーザー画像-->
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
            <p><%= link_to book_comment.user.name ,user_path(book_comment.user.id) %></p>
          </td>
          <td><!--ユーザーからのコメント-->
            <%= book_comment.comment %>
          </td>
          <td><!--削除ボタン-->
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
            <% end %>
          </td>
          </tr>
        <% end %>
      </table>
      